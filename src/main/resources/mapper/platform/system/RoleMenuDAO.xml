<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tbl.modules.platform.dao.system.RoleMenuDAO">

    <!--验证当前用户是否具有RFID数据权限-->
    <select id="getDataManage" resultType="com.tbl.modules.platform.entity.system.RoleMenu">
        SELECT * from sys_rolemenu sr LEFT JOIN sys_user su on su.ROLE_ID = sr.ROLE_ID
        where sr.MENU_ID = 41 and su.USER_ID = #{id}
    </select>

    <!--检查当前用户是否有设备管理权限-->
    <select id="getDeviceT" resultType="com.tbl.modules.platform.entity.system.RoleMenu">
        SELECT * from sys_rolemenu sr LEFT JOIN sys_user su on su.ROLE_ID = sr.ROLE_ID
        where sr.MENU_ID = 21 and su.USER_ID = #{id}
    </select>

    <!--保存角色对应菜单信息-->
    <insert id="saveRoleMenu">
        insert into SYS_ROLEMENU values (#{roleId}, #{menuId})
    </insert>

</mapper>
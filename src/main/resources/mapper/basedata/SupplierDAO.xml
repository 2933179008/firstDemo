<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tbl.modules.basedata.dao.SupplierDAO">

    <insert id="savaSupplier" parameterType="com.tbl.modules.basedata.entity.Supplier" keyProperty="id">
		insert into  base_supplier(id,supplier_code,supplier_name,supplier_Type,
		linkman,telephone,address,mail,remark,create_time) values
		(#{id},#{supplierCode},#{supplierName},#{supplierType},#{linkman},
		#{telephone},#{address},#{mail},#{remark},#{createTime})
	</insert>

    <select id="getAllLists" resultType="com.tbl.modules.basedata.entity.Supplier">
        select id,supplier_code,supplier_name,supplier_type,linkman,
        telephone,address,mail,remark
        from base_supplier where 1=1
        <if test="list!=null and list.size()>0">
            and id in
            <foreach item="ids" index="index" collection="list"
                     open="(" separator="," close=")">
                #{ids}
            </foreach>
        </if>
    </select>

</mapper>